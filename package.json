{
  "name": "@harshppatel/nestjs-themoviedb-api",
  "version": "1.0.3",
  "description": "NestJS Wrapper for node-themoviedb api",
  "author": "Harsh Patel <harshppatel2880@gmail.com>",
  "license": "MIT",
  "readmeFilename": "README.md",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.js",
  "files": [
    "dist/**/*",
    "*.md"
  ],
  "scripts": {
    "start:dev": "tsc -w",
    "build": "tsc",
    "prepare": "npm run build",
    "format": "prettier --write \"src/**/*.ts\" \"libs/**/*.ts\"",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage"
  },
  "keywords": [
    "nestjs",
    "themoviedb"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/harshPPatel/nestjs-themoviedb-api"
  },
  "bugs": "https://github.com/harshPPatel/nestjs-themoviedb-api/issues",
  "homepage": "https://github.com/harshPPatel/nestjs-themoviedb-api",
  "peerDependencies": {
    "@nestjs/common": "^8.0.10"
  },
  "dependencies": {
    "node-themoviedb": "^0.2.8",
    "rxjs": "^7.3.1"
  },
  "devDependencies": {
    "@nestjs/common": "^8.0.11",
    "@nestjs/core": "^8.0.10",
    "@nestjs/platform-express": "^8.0.10",
    "@nestjs/testing": "8.0.10",
    "@types/express": "4.17.13",
    "@types/jest": "27.0.2",
    "@types/node": "16.10.3",
    "@types/supertest": "2.0.11",
    "jest": "27.2.4",
    "prettier": "2.4.1",
    "supertest": "6.1.6",
    "ts-jest": "27.0.5",
    "ts-loader": "^9.2.6",
    "ts-node": "10.2.1",
    "tsc-watch": "4.5.0",
    "tsconfig-paths": "3.11.0",
    "tslint": "5.20.1",
    "typescript": "4.4.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src/"
    ]
  }
}
